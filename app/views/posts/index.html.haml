.wrapper
  = render "/layouts/header"
  .main
    .main-container
      = render partial: 'post', collection: @posts
  = render "/layouts/post_btn"
#overlay
  #modal-window
    .form
      .form__top
        #window-close
          %i.fas.fa-times
      = form_with(url: posts_path, model: @posts, local: true) do |f|
        .form__middle
          = f.text_area :content, class: "form-field", placeholder: "褒めて欲しい内容を入力しよう！(100字以内)"
        .form__bottom
          .form__bottom__mask
            %label.label
              .far.fa-images
              = f.file_field :images, multiple: true, class: "file-field"
          = f.submit "送信", class: "submit"
    
