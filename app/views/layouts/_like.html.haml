- if post.liked_by(current_user.id)
  .post__bottom__reaction__like
    = link_to post_like_path(post_id: post.id, id: post.likes[0].id),id: "#post__bottom__reaction__like--blue",remote: true,  method: :delete, turbolinks: false do
      %i.fas.fa-thumbs-up
  = post.likes.count
- else
  .post__bottom__reaction__like
    = link_to post_likes_path(post.id), id:"#post__bottom__reaction__like--white", remote: true, method: :post, turbolinks: false do
      %i.far.fa-thumbs-up
  = post.likes.count
